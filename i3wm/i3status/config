general {
    output_format = "i3bar"
    colors = true
    interval = 1
}

order += "cpu_usage"
order += "memory"
order += "volume master"
order += "tztime local"

cpu_usage {
    format = "CPU: %usage"
}

memory {
    format = "Mem: %used / %total"
}

volume master {
    format = "Vol: %volume"
    format_muted = "Vol: mute"
}

tztime local {
    format = "%Y-%m-%d %H:%M:%S"
}
